@model IPTVChannelListProxy.Models.PlaylistsViewModel

@{
    ViewData["Title"] = "Playlists";
}

<h2>Playlists</h2>

<div class="text-right mb-3">
    <a href="#" data-toggle="modal" data-target="#addPlaylistModal" class="btn btn-primary">Add playlist</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>M3U Url</th>
            <th>EPG Url</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var playlist in Model.Playlists)
        {
            <tr>
                <td><a asp-action="Details" asp-route-id="@playlist.ID">@playlist.Name</a></td>
                <td><a asp-action="GenerateM3U" asp-route-name="@playlist.Name.ToLower()">link</a></td>
                <td></td>
            </tr>
        }
    </tbody>
</table>
<div id="addPlaylistModal" class="modal" tabindex="-1" role="dialog">
    <form method="post" asp-action="Add">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Playlist</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" class="form-control" id="name" name="name" placeholder="Name" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="submit" class="btn btn-primary" value="Add" />
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </form>
</div>